[version 0.1]

Divider values of zero signify a paused state.

# modal
MA[xx]                              set # animations
MR[xx]                              set # rings
MS[xx]                              set strobe divider
MT                                  clock advance
MI                                  output statistics

# ring
R[xx] A[xx]                         assign animation

# animation
A[xx] E                             reset
A[xx] J[0|1]                        step (back / forward)
A[xx] Y[0|1]                        sync (start / end)
A[xx] CF[rrggbb]                    set forground colour
A[xx] CB[rrggbb]                    set background colour
A[xx] S[xx]                         set segments
A[xx] [F|R|O|T][C|N|X|S|D][xx]      set property value
A[xx] [F|R|O|T][J|M|B|R][0|1]       set property value

# fill types
S = SOLID

# properties
F = FILL
R = ROTATION
O = OFFSET
T = STROBE

# values
C = CONSTANT
N = MIN
X = MAX
S = STEP
D = DIVIDER
J = JOG
M = MIRROR
B = BOUNCE
R = REVERSE
