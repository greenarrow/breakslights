[version 0.2]

Divider values of zero signify a paused state.

# modal
MA[xx]                              set # animations
MR[xx]                              set # rings
MD[xx]                              set clock divider
MS[xx]                              set strobe divider
MC[xx]                              set chase divider
MT                                  clock advance
MI                                  output statistics

# ring
R[xx] N[xx]                         assign animation

# animation
A[xx] L                             reset
A[xx] J[0|1]                        step (back / forward)
A[xx] Y[0|1]                        sync (start / end)
A[xx] S[xx]                         set segments
A[xx] I[0|1]                        set mirror segments
A[xx] [property][C|N|X|S|D][xx]     set property value
A[xx] [property][J|I|B|V][0|1]      set property value

# fill types
S = SOLID

# properties
F = FILL
O = ROTATION
T = OFFSET
E = STROBE
H = HUE
B = LIGHTNESS
U = HUE2
G = LIGHNESS2

# values
C = CONSTANT
N = MIN
X = MAX
S = STEP
D = DIVIDER
J = JOG
B = BOUNCE
V = REVERSE

[add later]
ML[xx]                              master fade
MC[xx]                              chase speed
MH                                  advance chase
L = LIGHTNESS
H = HUE
M = MODULATION
